<Window x:Class="PavlenkoFrolovaTestIconomika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PavlenkoFrolovaTestIconomika"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="950" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Image Source="/Resource/Шеврон.jpg" />
            <Grid Grid.Column="1" Background="#FF2CA279">
                <TextBlock Text="ТПСК им. В.М. Максимчука" FontSize="60"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" FontWeight="Bold" Foreground="Black"/>
            </Grid>
        </Grid>
        <Frame Grid.Row="1" Name="FrameBody" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
