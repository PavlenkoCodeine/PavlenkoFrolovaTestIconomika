<Page x:Class="PavlenkoFrolovaTestIconomika.MainPage.GroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PavlenkoFrolovaTestIconomika.MainPage"
      mc:Ignorable="d" 
        Height="500" Width="950"
      Title="GroupPage">

    <Grid Margin="0 100">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Введите группу:" FontWeight="DemiBold"
                   FontSize="35" HorizontalAlignment="Right" Grid.Row="1"/>
        <TextBox Name="Name" Grid.Column="2"  FontSize="35"
                 Width="350" HorizontalAlignment="Left" Grid.Row="1"/>
       
        <Button Content="Добавить" Grid.Row="6" HorizontalAlignment="Right"
                FontSize="25" Width="150" Name="AddBtn" FontWeight="DemiBold"
                Click="AddBtn_Click_1"/>
        <Button Content="Назад" Grid.Row="6" Grid.Column="2" Width="150" HorizontalAlignment="Left"
                FontSize="25" Name="FeedBtn" FontWeight="DemiBold"
                Click="FeedBtn_Click_1"/>
    </Grid>
</Page>
