<Page x:Class="PavlenkoFrolovaTestIconomika.MainPage.AutoPrepodavatelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PavlenkoFrolovaTestIconomika.MainPage"
      mc:Ignorable="d" 
      Height="500" Width="950"
      Title="AutoPrepodavatelPage">
    <Grid Margin="0 100 0 50">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="55" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Text="Светлана Дмитриевна, введите пароль:"
                   FontSize="35"
                   HorizontalAlignment="Center"/>
        <PasswordBox Grid.Row="2" Name="PasswordBtn"
                 FontSize="35" Width="500"/>
        <Button Content="ОК" Grid.Row="6" FontWeight="DemiBold"
                FontSize="25" Width="150" Name="OKBtn"
                Click="OKBtn_Click"/>
    </Grid>
</Page>
