                        <CheckBox x:Name="ChB5" Margin="10" HorizontalAlignment="Left" Content="долей прибыли отрасли в общей прибыли промышленности;" FontSize="20"/>
                        <Button x:Name="p3" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p3_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="v4">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Margin="3">4</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="К основным направлениям научно-технического прогресса в промышленности относятся:" FontSize="30"/>
