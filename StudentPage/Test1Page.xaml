                        <Button x:Name="p10" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p10_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="v11">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Margin="3">11</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="С какого момента юридическое лицо приобретает гражданские права и принимает на себя гражданские обязанности?" FontSize="30"/>
