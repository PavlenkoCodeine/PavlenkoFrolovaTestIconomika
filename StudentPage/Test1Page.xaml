                        <RadioButton x:Name="RB2" Margin="10" HorizontalAlignment="Left" FontSize="20" Content="фактическое использование продукции;"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" FontSize="20" Content="общность основного сырья;"/>
                        <RadioButton Margin="10" HorizontalAlignment="Left" FontSize="20" Content="сложность технологических процессов."/>

                        <Button x:Name="p2" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p2_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem x:Name="v3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="3">3</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Отраслевая структура промышленности характеризуется:" FontSize="30"/>
