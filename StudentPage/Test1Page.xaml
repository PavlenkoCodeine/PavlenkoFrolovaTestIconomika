                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="2 мелкосерийное производство;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="3 массовое производство;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="4 непрерывное производство;" FontSize="20"/>
                        <TextBox x:Name="TextBox3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22"/>
                        <Button x:Name="p5" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p5_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="v6">
                <TabItem.Header>
                    <StackPanel>
                        <TextBlock Margin="3">6</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Серийному производству свойственны:" FontSize="30"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="1 широкое использование универсального оборудования;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="2 организация рабочих мест по технологической специализации;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="3 типизация технологических процессов и оснастки;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="4 1-3;" FontSize="20"/>
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="5 1,3;" FontSize="20"/>
                        <TextBox x:Name="TextBox4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22"/>
                        <Button x:Name="p6" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p6_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="v7">
