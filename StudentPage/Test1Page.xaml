                    <StackPanel>
                        <TextBlock Margin="3">15</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" HorizontalAlignment="Left" Text="Предприятия по формам собственности классифицируются на:" FontSize="30"/>
