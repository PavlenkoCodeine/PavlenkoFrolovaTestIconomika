                        <Button x:Name="p11" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="75" Height="22" Click="p11_Click"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="v12">
